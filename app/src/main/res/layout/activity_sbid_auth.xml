<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:id="@+id/infoText"
        android:textSize="22sp"
        android:text="Enter personal ID"
        android:textColor="@color/signicat_white"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="190dip"
        />
    <EditText
        android:inputType="number"
        android:text="198309172974"
        android:layout_below="@+id/infoText"
        android:id="@+id/personalIdEditText"
        android:textSize="@dimen/codeTextSize"
        android:ems="6"
        android:textColor="@color/signicat_black"
        android:layout_height="70dip"
        android:hint="Personal ID"
        android:paddingLeft="25dip"
        android:layout_marginTop="8dip"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textfield"
        android:maxLength="12"/>

    <Button
        android:text="Start SBID authentication"
        android:layout_below="@+id/personalIdEditText"
        android:background="@drawable/button_green"
        android:onClick="startAuthCall"
        android:layout_width="300dip"
        android:layout_marginTop="10dip"
        android:id="@+id/startSbidAuthentiationButton"
        android:layout_centerHorizontal="true"
        android:layout_height="70dip"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signicat_banner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dip"
        />

</RelativeLayout>
