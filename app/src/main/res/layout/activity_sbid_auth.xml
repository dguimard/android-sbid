<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoText"
        android:textSize="20sp"
        android:text="Enter your personal id-number:"
        android:textColor="@color/signicat_white"
        android:layout_marginTop="189dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:inputType="number"
        android:layout_below="@+id/infoText"
        android:id="@+id/personalIdEditText"
        android:textSize="@dimen/codeTextSize"
        android:ems="6"
        android:textColor="@color/signicat_black"
        android:layout_height="70dip"
        android:layout_width="300dp"
        android:hint="YYYYMMDDXXXX"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/textfield"
        android:maxLength="12"
        android:ellipsize="start"
        android:editable="false"
        android:layout_marginTop="8dip" />

    <Button
        android:text="Start authentication"
        android:layout_below="@+id/personalIdEditText"
        android:background="@drawable/button_green"
        android:onClick="startAuthCall"
        android:layout_width="300dip"
        android:layout_marginTop="10dip"
        android:id="@+id/startSbidAuthentiationButton"
        android:layout_centerHorizontal="true"
        android:layout_height="70dip"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signicat_banner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dip"
        />

</RelativeLayout>
